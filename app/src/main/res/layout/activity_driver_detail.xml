<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.taximobility.pojos.UserDetail" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".activities.DriverDetailActivity">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:elevation="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/left_arrow_black"
                    android:layout_centerInParent="true"
                    />




            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver details"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/textColor"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_semi_bold"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_15sdp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivDriverPic"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/user_ic"/>
                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.firstName}"
                    android:textSize="@dimen/_12sdp"
                    android:layout_toRightOf="@+id/ivDriverPic"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/inter_semi_bold"
                    />
                <TextView
                    android:id="@+id/tvCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{data.carTypeName}"
                    android:textSize="@dimen/_12sdp"
                    android:layout_toRightOf="@+id/ivDriverPic"
                    android:textColor="@color/textColor"
                    android:layout_below="@id/tvDriverName"
                    android:fontFamily="@font/inter_regular"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_card1"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginRight="@dimen/_5sdp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/ivHeart"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_star"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.rating}"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginLeft="@dimen/_5sdp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/ivCalander"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_calender"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.totalYear}"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="@dimen/_5sdp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/tvPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member since"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:textColor="@color/gray"
                        />
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.dateTime}"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:textColor="@color/textColor"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/gray"
                        android:layout_below="@id/ivPhone"
                        android:layout_toRightOf="@id/ivPhone"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car type"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:textColor="@color/gray"
                        android:layout_marginTop="@dimen/_10sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.carTypeName}"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:textColor="@color/textColor"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/gray"
                        android:layout_below="@id/ivPhone"
                        android:layout_toRightOf="@id/ivPhone"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plate number"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:textColor="@color/gray"
                        android:layout_marginTop="@dimen/_10sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.carNumber}"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ivPhone"
                        android:textColor="@color/textColor"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/gray"
                        android:layout_below="@id/ivPhone"
                        android:layout_toRightOf="@id/ivPhone"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        />


                </LinearLayout>





            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>
</layout>