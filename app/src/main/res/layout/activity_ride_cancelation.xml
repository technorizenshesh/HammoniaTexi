<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".activities.RideCancelationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/white_circular_bg"
         android:layout_margin="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/left_arrow_black"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/please_select_the_reason_for_cancellation"
    android:fontFamily="@font/inter_bold"
    android:textSize="@dimen/_16sdp"
    android:textColor="@color/textColor"
    android:layout_marginLeft="@dimen/_16sdp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        >
    <CheckBox
        android:id="@+id/checkbox_discount"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/_15sdp"
        android:checked="false"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I donâ€™t want to share"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/inter_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/textColor"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <CheckBox
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_15sdp"
            android:checked="false"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can't contact the driver"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_medium"
            android:layout_marginLeft="@dimen/_10sdp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <CheckBox
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_15sdp"
            android:checked="false"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver is late"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_medium"
            android:layout_marginLeft="@dimen/_10sdp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <CheckBox
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_15sdp"
            android:checked="false"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The price is not reasonable"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_medium"
            android:layout_marginLeft="@dimen/_10sdp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <CheckBox
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_15sdp"
            android:checked="false"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup address is incorrect"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_medium"
            android:layout_marginLeft="@dimen/_10sdp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/_10sdp"

        />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_rec_10dp_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:textAllCaps="false"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:text="Submit"
        android:layout_margin="@dimen/_15sdp"
        />
</RelativeLayout>
</layout>