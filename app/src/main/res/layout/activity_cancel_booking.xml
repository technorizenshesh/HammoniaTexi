<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CancelBooking">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            >
            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/pin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_120sdp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            >

            <RelativeLayout
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/btn_cancel"
                >

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:background="@drawable/rec_top_40"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_5"
                android:layout_below="@+id/ivMenu"
                android:padding="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/ivfrom"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/small_red_circle"
                    android:layout_marginTop="@dimen/_15sdp"
                    />
                <EditText
                    android:id="@+id/tvFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1, Thrale Street, \n London,SE19HW, UK"
                    android:layout_toRightOf="@+id/ivfrom"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    android:textSize="@dimen/_12sdp"
                    />
                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/gray"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_below="@+id/ivfrom"
                    android:layout_marginVertical="@dimen/_2sdp"
                    />
                <ImageView
                    android:id="@+id/ivto"
                    android:layout_below="@+id/view1"
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/down_arrow"
                    />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_toRightOf="@id/view1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_below="@+id/tvFrom"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:layout_toRightOf="@id/ivto"
                    >
                    <TextView
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ealing Broadway Shopping \n Centre, London, W55JY, UK"
                        android:inputType="none"
                        android:editable="false"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:backgroundTint="@color/white"
                        />
                </RelativeLayout>


            </RelativeLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Trip Time"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/inter_regular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 min"
                android:textColor="@color/red"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/inter_regular"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rec_10dp_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:textAllCaps="false"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="Cancel Booking"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>