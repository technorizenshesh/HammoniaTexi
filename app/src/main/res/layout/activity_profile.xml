<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.ProfileActivity"
        android:padding="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_50sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/left_arrow_black"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/user_ic"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/textColor"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_margin="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:background="@color/primary">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            >
                            <ImageView
                                android:id="@+id/ivPhone"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_phone"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                android:id="@+id/tv_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_toEndOf="@+id/ivPhone"
                                android:textColor="@color/textColor"
                                />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/gray"
                                android:layout_below="@id/ivPhone"
                                android:layout_toEndOf="@id/ivPhone"
                                android:layout_marginStart="@dimen/_8sdp"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            >
                            <ImageView
                                android:id="@+id/ivMail"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_mail"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                android:id="@+id/tvMail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_toEndOf="@+id/ivMail"
                                android:textColor="@color/textColor"
                                />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/gray"
                                android:layout_below="@id/ivMail"
                                android:layout_toEndOf="@id/ivMail"
                                android:layout_marginStart="@dimen/_8sdp"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            >
                            <ImageView
                                android:id="@+id/iv_location"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_place"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                android:id="@+id/tvPlace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_toEndOf="@+id/iv_location"
                                android:textColor="@color/textColor"
                                />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/gray"
                                android:layout_below="@id/iv_location"
                                android:layout_toEndOf="@id/iv_location"
                                android:layout_marginStart="@dimen/_8sdp"
                                />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <TextView
                    android:id="@+id/tvNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/textColor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_receiving_driver_messages"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/textColor"
                    android:layout_below="@id/tvNoti"
                    />
                <Switch
                    android:id="@+id/switchNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/btn_primary"
            android:layout_alignParentBottom="true"
            android:text="@string/delete_account"/>
    </RelativeLayout>
</layout>
