<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_back_black"/>

                <ImageView
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/ic_logo"
                    android:layout_marginTop="@dimen/_20sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/black"
                    android:text="Login"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_below="@+id/tvNum"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        >
                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            app:ccp_textSize="12dp"
                            app:ccp_countryPreference="NO"
                            app:ccp_defaultPhoneCode="47"
                            android:layout_marginRight="5dp"
                            android:layout_height="@dimen/_40sdp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/phone_edit_text"
                            android:layout_width="0dp"
                            android:backgroundTint="@color/white"
                            android:layout_height="wrap_content"
                            android:hint="@string/phone_number"
                            android:layout_weight="0.7"
                            app:boxStrokeWidth="0dp"
                            android:background="@null"
                            app:hintTextColor="@color/gray"
                            app:boxStrokeWidthFocused="0dp"
                            >
                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="match_parent"
                                android:backgroundTint="@color/white"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:imeOptions="actionNext"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/_15sdp"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/labelPass"
                        android:layout_width="match_parent"
                        android:backgroundTint="@color/white"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        app:boxStrokeWidth="0dp"
                        android:background="@null"
                        app:hintTextColor="@color/gray"
                        app:boxStrokeWidthFocused="0dp"
                        >
                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/white"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/_15sdp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlForgotPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/tvForgotPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forgot_your_password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:layout_toRightOf="@+id/tvForgotPass"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_arrow_red"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_circular_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:text="Sign In"
                    />

<!--
                <RelativeLayout
                    android:id="@+id/btn_Signin"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/continue_bg"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_30dp"
                        android:layout_centerVertical="true"
                        android:text="Sign In"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:src="@drawable/white_right_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_20dp"
                        />
                </RelativeLayout>
-->
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_login_with_social_account"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                >
<androidx.cardview.widget.CardView
    android:id="@+id/cv_google"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_50sdp"
    android:layout_marginRight="@dimen/_5sdp"
     >
                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/rec_bg_40"
                    android:layout_marginRight="@dimen/_5sdp"
                    >
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/google"
                    android:layout_centerInParent="true"
                    />
                </RelativeLayout>
</androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:elevation="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >
                    <RelativeLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/rec_bg_40"
                        android:layout_marginRight="@dimen/_5sdp"
                        >
                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/facebook"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_link_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_above="@+id/bottom_white_line"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tvDontHave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dont_have_an_account"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <ImageView
                android:layout_toRightOf="@+id/tvDontHave"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow_red"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/bottom_white_line"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5sp"
            />

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>